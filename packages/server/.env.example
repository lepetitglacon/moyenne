# =============================================================================
# Server Configuration
# =============================================================================

# Port (optional, default: 3000)
PORT=3000

# =============================================================================
# REQUIRED - Server will crash if missing
# =============================================================================

# JWT secret for authentication
SECRET_KEY=your_jwt_secret_key_here

# API key for Discord bot authentication
BOT_API_KEY=your_bot_api_key_here

# =============================================================================
# Optional
# =============================================================================

# Frontend URL for CORS (default: http://localhost:5173)
FRONTEND_URL=http://localhost:5173

# Logging level: DEBUG, INFO, WARNING, ERROR (default: INFO)
LOG_LEVEL=INFO

# Database path - for Docker volume persistence (default: ./database.sqlite)
# DB_PATH=/app/data/database.sqlite